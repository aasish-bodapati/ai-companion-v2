						],
						"url": {
							"raw": "{{base_url}}/api/v1/documents/1/reprocess",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "documents", "1", "reprocess"]
						}
					},
					"response": []
				},
				{
					"name": "Delete Document",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/documents/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "documents", "1"]
						}
					},
					"response": []
				}
			]
		}
